<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.t_transportation.mapper.SuppliersMapper">
    <update id="update">
       update suppliers
    <set>
        <if test="suppliersName != null">
            suppliers_name=#{suppliersName},
        </if>
            <if test="materialsName != null">
            materials_name=#{materialsName},
        </if>
            <if test="materialsTotalPrice != null">
            materials_totalprice=#{materialsTotalPrice},
        </if>
        <if test="contact !=null">
            contact=#{contact},
        </if>
        <if test="email!=null">
        email=#{email},
        </if>
    </set>
    where  id=#{id}
</update>

     <select id="query" resultType="com.example.t_transportation.entity.Suppliers">
        select * from suppliers
    <where>
        <if test="id!=null">
         id=#{id}
        </if>
    </where>
    </select>

</mapper>