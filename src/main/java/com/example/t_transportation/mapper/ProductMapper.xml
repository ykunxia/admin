<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.t_transportation.mapper.ProductMapper">

    <update id="update">
       update product
    <set>
        <if test="productName != null">
            product_name=#{productName},
        </if>
        <if test="quantity !=null">
            quantity=#{quantity},
        </if>
        <if test="material!=null">
        material=#{material},
        </if>
    </set>
    where  id=#{id}
</update>

     <select id="query" resultType="com.example.t_transportation.entity.Product">
        select * from product
    <where>
        <if test="id!=null">
         id=#{id}
        </if>
    </where>
    </select>

</mapper>