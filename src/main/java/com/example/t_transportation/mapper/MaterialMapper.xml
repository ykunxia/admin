<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.t_transportation.mapper.MaterialMapper">

    <update id="update">
       update materials
    <set>
        <if test="materialsName != null">
            materials_name=#{materialsName},
        </if>
        <if test="quantity !=null">
            quantity=#{quantity},
        </if>
        <if test="suppliersName!=null">
        suppliers_name=#{suppliersName},
        </if>
    </set>
    where  id=#{id}
</update>

    <select id="query" resultType="com.example.t_transportation.entity.Material">
        select * from materials
    <where>
        <if test="id!=null">
         id=#{id}
        </if>
    </where>
    </select>

</mapper>